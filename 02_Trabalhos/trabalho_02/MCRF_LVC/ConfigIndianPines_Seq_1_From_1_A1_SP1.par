%YAML:1.0
# Paths to Raster, Labels, Index Image and DL features
pathLabels: ./Data/Indian_Pines/Labels/
pathTrainTest: ./Data/Indian_Pines/TrainTestMask/
pathFeatures: ./Data/Indian_Pines/Features/
# ---------------------------------------------------------------------------------------------------------
# Association Potential Parameters (links labels with pixel values)
# Classifier: 
# RandomForestCV
# NaiveBayesAdd
nodeTrainingType: NaiveBayesAdd
# Classifier parameters:
# NodeTrainerParams_RF
# NodeTrainerParams_NB
nodeTrainingDataPath: ./Data/Indian_Pines/NodeTrainerParams_NB/
# Association Potential Weight
nodeTrainingWeight: 1.
# ---------------------------------------------------------------------------------------------------------
# Interaction Potential Parameters (links every pixel with each neighbors)
# Interaction type model:
# ContrastPotts
# Potts
edgeSpatialTrainingType: ContrastPotts
# Feature engine:
edgeSpatialTrainingFeatureEngine: InteractionDistance
# Interaction type parameters
edgeSpatialDataFile: ./Data/Indian_Pines/TrainEdgeContrastSensitivePotts.par
# Spatial Connectivity folder
edgeSpatialConnectivityPath: ./Data/Indian_Pines/Connectivity_Spatial/
# Interaction Potential Weight
edgeSpatialTrainingWeight: 1.
# ---------------------------------------------------------------------------------------------------------
# Inference
inferIterations: 15
# Tile Size
tileSize: 30000
# Experiment Configuration
initEpoch: 1
sequenceLength: 1
# ---------------------------------------------------------------------------------------------------------
# Not necessary to change for this homework
# Temporal Interaction Potential Parameters (links every pixel with each neighbors from the adjacent epoch)
edgeTemporalTrainingType: Generic
edgeTemporalTrainingFeatureEngine: InteractionConcatenate
edgeTemporalDataFile: ./
edgeTemporalConnectivityPath: ./
edgeTemporalTrainingWeight: 0
edgeTemporalPriorModel: 2
edgeTemporalLikelihoodModel: 1
pathTransitions: ./
pathTransitionsSAR: ./
useCropLengthModeling: 0
pathTransitionsExt: ./
pathTransitionsSARExt: ./
pathRepeatClasses: ./
useHigherOrder: 0
usePowell: 0
# ---------------------------------------------------------------------------------------------------------